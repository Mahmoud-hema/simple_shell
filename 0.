#include <stdio.h>
#include <unistd.h>
#include <stdlib.h>
/**
* main - Entry point
* Return: Always 0 (Success)
*/
int main(void)
{
pid_t ch_p;
int sta;
char *argv[] = {"/bin/ls", "-l", "/tmp", NULL};
ch_p = fork();
if (ch_p == 0)
{
if (execve(argv[0], argv, NULL) == -1)
{
perror("Error:");
}
exit(0);
}
if (ch_p == -1)
{
perror("Error:");
return (2);
}
else
{
wait(&sta);
}
return (0);  // return 0 if it done true
}
