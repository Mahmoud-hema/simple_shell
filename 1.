#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#define MAX_CMD_LEN 255
#define PROMPT "simple_shell$ "
/**
* main - Entry point
*
* Return: Always 0 (Success)
*/
int main(void)
{
char cmd[MAX_CMD_LEN];
char *argv[] = {NULL, NULL};
pid_t ch_p;
int sta;
while (1)
{
printf(PROMPT);
if (fgets(cmd, MAX_CMD_LEN, stdin) == NULL)
{
printf("\n");
exit(0);
}
cmd[strlen(cmd) - 1] = '\0';
argv[0] = cmd;
ch_p = fork();
if (ch_p == -1)
{
perror("Error:");
return (1);
}
if (ch_p == 0)
{
if (execve(argv[0], argv, NULL) == -1)
{
perror("Error:");
}
exit(0);
}
else
{
wait(&sta);
}
}
return (0);
}
